VITE_API_BASE_URL=http://localhost:8000/api
VITE_AUTH_LOGIN_PATH=/auth/login
VITE_AUTH_ME_PATH=/user
VITE_AUTH_LOGOUT_PATH=/auth/logout
# Realtime socket server (socket.io)
VITE_SOCKET_URL=http://127.0.0.1:3001
VITE_SOCKET_PATH=/socket.io

# Offer TTL (seconds) - should match API dispatch.offer_ttl_seconds
VITE_OFFER_TTL_SECONDS=70

# Manual offer endpoint template (optional).
# Default uses existing /ops/orders/{orderId}/assign-driver route.
# If you add a real endpoint later, set it here, ex:
# VITE_OPS_OFFER_DRIVER_PATH_TEMPLATE=/ops/orders/{orderId}/offer-driver
VITE_OPS_OFFER_DRIVER_PATH_TEMPLATE=/ops/orders/{orderId}/assign-driver
